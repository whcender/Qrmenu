// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String  @unique
  ename String
  category Categories @relation(fields: [categoryname], references: [name])
  categoryname String 
  image String
  price Int
  description String?
  edescription String?
}
model Categories{
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String  @unique
  ename String 
  image String 
  products Products[]
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
}